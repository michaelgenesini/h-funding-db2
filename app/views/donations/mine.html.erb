<div class="content">
    <div class="container"> 

      <div class="row"> 
        <div class="col-lg-12">
          <h1><%= current_user.firstname.upcase%> DONATIONS</h1>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Campaign</th>
                <th>Amount</th>
                <th>Date</th>
              </tr>
            </thead>

            <tbody>
              <% @donations.each do |donation| %>
                <tr>
                  <td><%= donation.user_id %></td>
                  <td><%= donation.amount %></td>
                  <td><%= donation.date %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
  </div>
</div>