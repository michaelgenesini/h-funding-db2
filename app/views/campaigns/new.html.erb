<% provide(:title, 'New Campaign') %>

<div class="content">
    <div class="container"> 
    <br/>
    <div class="row"> 
        <div class="col-lg-6 col-lg-offset-3">
      	  <% flash.each do |name, msg| -%>
            <%= content_tag :div, msg, class: name %>
          <% end -%>
        </div>
      </div>
		<div class="row">	
			<div class="col-lg-6 col-lg-offset-3">
				<h1>Create new campaign</h1>

				<%= form_for(@campaign, html: { class: "styled" } ) do |f| %>
					<div class="form-group">
						<%= f.label :Owner %>
						<div class="form-control">
							<%= current_user.firstname%>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :title %>
						<%= f.text_field :title, class: 'form-control'%>
					</div>
					<div class="form-group">
						<%= f.label :description %>
						<%= f.text_field :description, class: 'form-control'%>
					</div>
					<div class="form-group">
						<%= f.label :date_start %>
						<div class="form-control">
							<%= f.datetime_select :date_start, class: 'form-control'%>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :date_end %>
						<div class="form-control">
							<%= f.datetime_select :date_end, class: 'form-control'%>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :goal %>
						<%= f.number_field :goal, :in => 0..1000000000, :step => 0.01, class: 'form-control'%>
					</div>

					<%= f.submit "Crea la nuova campagna", class: "btn btn-success" %>
				<% end %>	
			</div>
		</div>
  	</div>
</div>