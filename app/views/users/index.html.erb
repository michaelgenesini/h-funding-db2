<div class="content">
    <div class="container"> 

    <div class="row"> 
      <div class="col-lg-12">
        <h1>SHOW USERS</h1>
        <%= link_to 'New User', new_user_path, class: "btn btn-default pull-right"  %> 
        <br />
        <% flash.each do |name, msg| -%>
          <%= content_tag :div, msg, class: name %>
        <% end -%>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Firstname</th>
              <th>Lastname</th>
              <th>Mail</th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><a href="/users/<%= user.id%>"><%= user.firstname %></a></td>
                <td><%= user.lastname %></td>
                <td><%= user.mail %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>